

/*

2. Zigzag number pattern


    1
   2 3
  4   5
 6     7


*/

#include<iostream>
using namespace std;

int main()
{
    int c = 1;

    for (int j=1;j<=4;j++)
    {
        // Print leading spaces

        for (int s=1;s<=4-j;s++)
        
        {
            cout << " ";
        }

        // Print the first number
        cout << c++;

        // Print inner spaces and second number 
      
        if (j>1)
        {
            for (int m=1;m<=2*j-3;m++)
          
            {
                cout <<" ";
            }
     // Print second number
            cout << c++;
        }

        cout << endl;

    }

    return 0;

}